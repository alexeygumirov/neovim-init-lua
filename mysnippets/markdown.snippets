endsnippet

snippet hugoyoutube-title "Hugo shortcode: youtube-title"
{{< youtube ${1:<video ID>} title="${2:title}" >}}
endsnippet

snippet hugoyoutube-title-auto "Hugo shortcode: youtube-title-autoplay"
{{< youtube ${1:<video ID>} title="${2:title}" autoplay="true" >}}
endsnippet

snippet hugoyoutube-class-title "Hugo shortcode: youtube-class-title"
{{< youtube ${1:<video ID>} class="${2:css-class}" title="${3:title}" >}}
endsnippet

snippet hugoyoutube-class-title-auto "Hugo shortcode: youtube-class-title-autoplay"
{{< youtube ${1:<video ID>} class="${2:css-class}" title="${3:title}" autoplay="true" >}}
endsnippet

snippet todo "ToDo list"
- [ ] ${1:Item 1}
- [ ] ${2:Item 2}
	- [ ] Item 3
endsnippet
