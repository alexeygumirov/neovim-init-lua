endsnippet

snippet hugoyoutube-auto "Hugo shortcode: youtube-autoplay"
{{< youtube ${1:<video ID>} autoplay="true" >}}
endsnippet

snippet hugoyoutube-class "Hugo shortcode: youtube-class"
